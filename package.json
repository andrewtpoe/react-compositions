{
  "name": "pwa-template",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "normalize.css": "^7.0.0",
    "prop-types": "^15.5.10",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-intl": "^2.3.0",
    "react-markdown": "^2.5.0",
    "react-router-dom": "^4.1.1",
    "styled-components": "next"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-plugin-react-intl": "^2.3.1",
    "babel-plugin-styled-components": "^1.1.4",
    "babel-preset-react-app": "^3.0.0",
    "cross-env": "^5.0.0",
    "react-hot-loader": "next",
    "react-intl-translations-manager": "^5.0.0",
    "react-scripts": "1.0.0",
    "rimraf": "^2.6.1"
  },
  "scripts": {
    "build": "npm run translate && cross-env NODE_PATH=src/ react-scripts build",
    "build:clean": "rimraf ./build",
    "eject": "react-scripts eject",
    "start": "cross-env NODE_PATH=src react-scripts start",
    "test": "react-scripts test --env=jsdom",
    "translate": "npm run translations:clean && npm run translations:extract && npm run translations:generate",
    "translations:clean": "rimraf ./src/translations/extracted-messages && rimraf ./src/translations/en.json",
    "translations:extract": "cross-env NODE_ENV=production babel ./src >/dev/null",
    "translations:generate": "cross-env NODE_ENV=production babel-node scripts/translationRunner.js"
  }
}
